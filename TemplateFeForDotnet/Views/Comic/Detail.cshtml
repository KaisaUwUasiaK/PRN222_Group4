@{
    ViewData["Title"] = "Solo Leveling: Arise";
}

@section Styles {
    <style>
        /* Detail Page Specific Styles */
        .detail-hero {
            position: relative;
            margin-top: -80px;
            /* Pull up behind header */
            padding-top: 120px;
            padding-bottom: 4rem;
            background: linear-gradient(to bottom, rgba(15, 23, 42, 0.8), var(--bg-main)), url('https://images.unsplash.com/photo-1612036782180-6f0b6cd846fe?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
        }

        .detail-grid {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 40px;
        }

        .detail-cover {
            width: 100%;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-glow);
        }

        .chapter-list {
            background: var(--bg-surface);
            border-radius: var(--radius-md);
            border: 1px solid var(--border-color);
            margin-top: 2rem;
            max-height: 600px;
            overflow-y: auto;
        }

        .chapter-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 24px;
            border-bottom: 1px solid var(--border-color);
            transition: background 0.2s;
            cursor: pointer;
        }

        .chapter-item:last-child {
            border-bottom: none;
        }

        .chapter-item:hover {
            background: var(--bg-surface-hover);
        }

        .chapter-item.read {
            color: var(--text-muted);
        }

        .tab-nav {
            display: flex;
            gap: 2rem;
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 2rem;
        }

        .tab-link {
            padding-bottom: 1rem;
            font-weight: 500;
            cursor: pointer;
            color: var(--text-secondary);
            border-bottom: 2px solid transparent;
        }

        .tab-link.active {
            color: var(--color-primary);
            border-bottom-color: var(--color-primary);
        }
    </style>
}

    <!-- Detail Hero -->
    <div class="detail-hero">
        <div class="container detail-grid">
            <!-- Left: Cover -->
            <div>
                <img src="https://images.unsplash.com/photo-1612036782180-6f0b6cd846fe?q=80&w=2070&auto=format&fit=crop"
                     alt="Cover" class="detail-cover">
                <div class="flex flex-col gap-2" style="margin-top: 1rem;">
                    <a href="@Url.Action("Read", "Book")" class="btn btn-primary" style="width: 100%;">Read First Chapter</a>
                    <button class="btn btn-outline" style="width: 100%;">
                        <i class="ph-fill ph-heart" style="margin-right: 8px;"></i> Favorited
                    </button>
                </div>
            </div>

            <!-- Right: Info -->
            <div>
                <h1 style="font-size: 3rem; margin-bottom: 0.5rem;">Solo Leveling: Arise</h1>
                <div class="flex items-center gap-4 text-muted" style="margin-bottom: 1.5rem;">
                    <span class="flex items-center gap-1"><i class="ph-fill ph-star text-accent"></i> 4.9</span>
                    <span>•</span>
                    <span>Action, Fantasy</span>
                    <span>•</span>
                    <span>Ongoing</span>
                    <span>•</span>
                    <span>Author: Chu-Gong</span>
                </div>

                <p class="text-secondary" style="max-width: 800px; margin-bottom: 2rem;">
                    In a world where hunters, humans who possess magical abilities, must battle deadly monsters to
                    protect the human race from certain annihilation, a notoriously weak hunter named Sung Jinwoo finds
                    himself in a struggle for survival. One day, after narrowly surviving an overwhelmingly powerful
                    double dungeon that wipes out nearly his entire party, a mysterious program selects him as its sole
                    player and in turn, gives him the unique ability to level up in strength.
                </p>

                <!-- Tabs -->
                <div class="tab-nav">
                    <div class="tab-link active">Chapters</div>
                    <div class="tab-link">Comments (12.4k)</div>
                    <div class="tab-link">Related</div>
                </div>

                <!-- Utility Bar -->
                <div class="flex justify-between items-center" style="margin-bottom: 1rem;">
                    <span class="text-muted">Total 178 Chapters</span>
                    <div class="flex gap-2">
                        <button class="btn btn-ghost" style="padding: 4px 12px; font-size: 0.8rem;">Oldest First</button>
                        <button class="btn btn-ghost" style="padding: 4px 12px; font-size: 0.8rem;">Newest First</button>
                    </div>
                </div>

                <!-- Chapter List -->
                <div class="chapter-list">
                    <a href="@Url.Action("Read", "Book")" class="chapter-item" style="text-decoration: none; color: inherit;">
                        <div class="flex flex-col">
                            <span style="font-weight: 600;">Chapter 178</span>
                            <span class="text-muted" style="font-size: 0.85rem;">2 hours ago</span>
                        </div>
                        <span class="btn btn-ghost text-primary">Read</span>
                    </a>
                    <div class="chapter-item">
                        <div class="flex flex-col">
                            <span style="font-weight: 600;">Chapter 177</span>
                            <span class="text-muted" style="font-size: 0.85rem;">Yesterday</span>
                        </div>
                        <button class="btn btn-ghost text-primary">Read</button>
                    </div>
                    <div class="chapter-item read">
                        <div class="flex flex-col">
                            <span style="font-weight: 600;">Chapter 176</span>
                            <span class="text-muted" style="font-size: 0.85rem;">Feb 10, 2026</span>
                        </div>
                        <span class="text-muted" style="font-size: 0.85rem;">Read</span>
                    </div>
                    <div class="chapter-item read">
                        <div class="flex flex-col">
                            <span style="font-weight: 600;">Chapter 175</span>
                            <span class="text-muted" style="font-size: 0.85rem;">Feb 03, 2026</span>
                        </div>
                        <span class="text-muted" style="font-size: 0.85rem;">Read</span>
                    </div>
                    <!-- More items... -->
                </div>
            </div>
        </div>
    </div>
