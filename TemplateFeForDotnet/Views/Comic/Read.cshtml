@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chapter 178 - Solo Leveling: Arise - ComicVerse</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&display=swap"
          rel="stylesheet">

    <!-- Icons -->
    <script src="https://unpkg.com/%40phosphor-icons/web"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/variables.css">
    <link rel="stylesheet" href="~/css/style.css">

    <style>
        /* Reader Specific Styles */
        body {
            background-color: #000;
            /* Darker background for reading */
        }

        .reader-header {
            position: sticky;
            top: 0;
            z-index: 50;
            background: rgba(15, 23, 42, 0.95);
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            transition: transform 0.3s;
        }

        .reader-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0;
        }

        .comic-page {
            width: 100%;
            display: block;
            margin: 0;
        }

        .reader-nav {
            display: flex;
            justify-content: center;
            gap: 1rem;
            padding: 2rem;
            background: var(--bg-surface);
            margin-top: 2rem;
        }

        .comment-section {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            color: var(--text-secondary);
        }

        /* Hide header on scroll down could be added with JS */
    </style>
</head>

<body>

    <!-- Reader Header -->
    <header class="reader-header">
        <div class="container flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="@Url.Action("Detail", "Book")" class="btn btn-ghost" style="padding: 8px;">
                    <i class="ph ph-arrow-left" style="font-size: 1.25rem;"></i>
                </a>
                <div>
                    <h3 style="margin: 0; font-size: 1rem;">Solo Leveling: Arise</h3>
                    <div class="text-muted" style="font-size: 0.8rem;">Chapter 178</div>
                </div>
            </div>

            <div class="flex items-center gap-2">
                <button class="btn btn-outline" disabled>Prev</button>
                <select style="background: var(--bg-surface); color: white; border: 1px solid var(--border-color); padding: 6px 12px; border-radius: 4px;">
                    <option>Chapter 178</option>
                    <option>Chapter 177</option>
                    <option>Chapter 176</option>
                </select>
                <button class="btn btn-primary">Next</button>
            </div>

            <div class="flex items-center gap-2">
                <button class="btn btn-ghost"><i class="ph ph-gear"></i></button>
            </div>
        </div>
    </header>

    <!-- Reader Content -->
    <main class="reader-container">
        <!-- Placeholder Images for Comic Strip -->
        <img src="https://images.unsplash.com/photo-1620641786242-7dc308642051?q=80&w=1000&auto=format&fit=crop"
             alt="Page 1" class="comic-page">
        <img src="https://images.unsplash.com/photo-1620641786242-7dc308642051?q=80&w=1000&auto=format&fit=crop"
             alt="Page 2" class="comic-page">
        <img src="https://images.unsplash.com/photo-1620641786242-7dc308642051?q=80&w=1000&auto=format&fit=crop"
             alt="Page 3" class="comic-page">

        <!-- Bottom Nav -->
        <div class="reader-nav">
            <button class="btn btn-outline" disabled>Previous Chapter</button>
            <button class="btn btn-primary">Next Chapter</button>
        </div>
    </main>

    <!-- Comments (Simple) -->
    <section class="comment-section">
        <h3>Comments (124)</h3>
        <div class="flex gap-4" style="margin-top: 1.5rem;">
            <div class="profile-avatar"
                 style="width: 40px; height: 40px; border-radius: 50%; background: var(--border-color); flex-shrink: 0;">
            </div>
            <div style="flex: 1;">
                <textarea placeholder="Write a comment..."
                          style="width: 100%; background: var(--bg-surface); border: 1px solid var(--border-color); padding: 12px; border-radius: 8px; color: white; min-height: 80px;"></textarea>
                <div class="flex justify-between" style="margin-top: 8px;">
                    <button class="btn btn-ghost text-muted"><i class="ph ph-image"></i> Spoiler?</button>
                    <button class="btn btn-primary">Post</button>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
