<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ComicVerse</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icons -->
    <script src="https://unpkg.com/%40phosphor-icons/web"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/variables.css">
    <link rel="stylesheet" href="~/css/style.css">
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <!-- Header -->
    <header class="header">
        <div class="container flex items-center justify-between">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="logo flex items-center gap-2">
                <i class="ph-fill ph-book-open-text text-primary" style="font-size: 2rem;"></i>
                <span style="font-family: var(--font-heading); font-size: 1.5rem; font-weight: 700;">ComicVerse</span>
            </a>
    
            <!-- Search -->
            <div class="search-bar">
                <i class="ph ph-magnifying-glass search-icon"></i>
                <input type="text" class="search-input" placeholder="Search comics, authors, genres...">
            </div>
    
            <!-- Header Actions -->
            <div class="flex items-center gap-4">
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-ghost text-muted" style="font-size: 0.9rem;">
                    <i class="ph ph-squares-four" style="margin-right: 4px;"></i> Admin
                </a>
                <button class="btn btn-primary">
                    <i class="ph ph-upload-simple" style="margin-right: 8px;"></i> Upload
                </button>
                <button class="btn btn-ghost" style="padding: 8px;">
                    <i class="ph ph-bell" style="font-size: 1.25rem;"></i>
                </button>
                <div class="dropdown">
                    <div class="dropdown-trigger">
                        <div class="profile-avatar"
                            style="width: 40px; height: 40px; border-radius: 50%; background: var(--bg-surface); overflow: hidden;">
                            <img src="https://i.pravatar.cc/150?img=11" alt="Profile">
                        </div>
                        <i class="ph-bold ph-caret-down dropdown-arrow"></i>
                    </div>
    
                    <div class="dropdown-content">
                        <a href="@Url.Action("Profile", "User")" class="dropdown-item">
                            <i class="ph ph-user"></i> My Profile
                        </a>
                        <a href="#" class="dropdown-item">
                            <i class="ph ph-books"></i> My Library
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Index", "Home")" class="dropdown-item" style="color: var(--color-danger);">
                            <i class="ph ph-sign-out"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    @RenderBody()

    <!-- Footer -->
    <footer class="footer">
        <div class="container" style="text-align: center;">
            <div class="flex items-center justify-center gap-2" style="margin-bottom: 1rem;">
                <i class="ph-fill ph-book-open-text text-primary" style="font-size: 1.5rem;"></i>
                <span style="font-family: var(--font-heading); font-size: 1.25rem; font-weight: 700;">ComicVerse</span>
            </div>
            <p>&copy; 2026 ComicVerse. All rights reserved.</p>
            <div class="flex justify-center gap-4" style="margin-top: 1rem;">
                <a href="#" class="text-muted hover:text-primary">Privacy Policy</a>
                <a href="#" class="text-muted hover:text-primary">Terms of Service</a>
                <a href="#" class="text-muted hover:text-primary">DMCA</a>
            </div>
        </div>
    </footer>

    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
