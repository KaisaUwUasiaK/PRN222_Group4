@{
    ViewData["Title"] = "Home";
}

<main class="container">

    <!-- Hero Section -->
    <section class="hero">
        <img src="https://images.unsplash.com/photo-1612036782180-6f0b6cd846fe?q=80&w=2070&auto=format&fit=crop"
             alt="Hero Background" class="hero-bg">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="hero-tags">
                <span class="tag">#1 Trending</span>
                <span class="tag">Action</span>
                <span class="tag">Fantasy</span>
            </div>
            <h1 class="hero-title">Solo Leveling: Arise</h1>
            <p class="hero-desc">
                In a world where hunters, humans who possess magical abilities, must battle deadly monsters to
                protect the human race from certain annihilation, a notoriously weak hunter named Sung Jinwoo finds
                himself in a struggle for survival.
            </p>
            <div class="flex gap-4">
                <a href="@Url.Action("Read", "Comic")" class="btn btn-primary">Read Now</a>
                <button class="btn btn-ghost" style="background: rgba(255,255,255,0.1);">       
                    <i class="ph-fill ph-heart" style="margin-right: 8px;"></i> Add to Library
                </button>
            </div>
        </div>
    </section>

    <!-- Categories -->
    <div class="category-scroll" style="margin-top: 2rem;">
        <div class="category-pill active">All</div>
        <div class="category-pill">Action</div>
        <div class="category-pill">Romance</div>
        <div class="category-pill">Fantasy</div>
        <div class="category-pill">Sci-Fi</div>
        <div class="category-pill">Horror</div>
        <div class="category-pill">Slice of Life</div>
        <div class="category-pill">Comedy</div>
        <div class="category-pill">Drama</div>
    </div>

    <!-- Continue Reading -->
    <section>
        <div class="section-header">
            <h2>Continue Reading</h2>
            <a href="@Url.Action("Index", "Comic")" class="btn btn-ghost text-primary">View History -></a>
        </div>
        <div class="comic-grid">
            <!-- Card 1 -->
            <a href="@Url.Action("Detail", "Comic")" class="comic-card" style="display: block; color: inherit;">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1541963463532-d68292c34b19?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Comic Cover">
                    <div class="card-overlay">
                        <button class="btn btn-primary btn-sm">Read Ch. 24</button>
                    </div>
                </div>
                <h3 class="card-title">Omniscient Reader</h3>
                <div class="card-meta flex justify-between">
                    <span>Ch. 23/550</span>
                    <span>Update: 2h ago</span>
                </div>
                <div style="height: 4px; background: var(--border-color); border-radius: 2px; margin-top: 8px; overflow: hidden;">
                    <div style="width: 45%; height: 100%; background: var(--color-accent);"></div>
                </div>
            </a>
            <!-- Card 2 -->
            <a href="@Url.Action("Detail", "Comic")" class="comic-card" style="display: block; color: inherit;">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1601850494422-3cf14624b0b3?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Comic Cover">
                </div>
                <h3 class="card-title">Tower of God</h3>
                <div class="card-meta flex justify-between">
                    <span>Ch. 142/???</span>
                    <span>Update: 1d ago</span>
                </div>
                <div style="height: 4px; background: var(--border-color); border-radius: 2px; margin-top: 8px; overflow: hidden;">
                    <div style="width: 80%; height: 100%; background: var(--color-accent);"></div>
                </div>
            </a>
        </div>
    </section>

    <!-- New & Trending -->
    <section>
        <div class="section-header">
            <h2>New & Trending</h2>
            <a href="@Url.Action("Index", "Comic")" class="btn btn-ghost">View All -></a>
        </div>
        <div class="comic-grid">
            <!-- Loop 6 times for demo -->
            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://plus.unsplash.com/premium_photo-1664302456488-88849eb2d609?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                    <div class="card-overlay">
                        <i class="ph-fill ph-star text-accent" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <h3 class="card-title">The Beginning After The End</h3>
                <p class="card-meta">Action, Adventure</p>
            </div>

            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1560972550-aba3456b5564?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                </div>
                <h3 class="card-title">Wind Breaker</h3>
                <p class="card-meta">Sports, Drama</p>
            </div>

            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1535905557558-afc4877a26fc?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                </div>
                <h3 class="card-title">Bastard</h3>
                <p class="card-meta">Thriller, Horror</p>
            </div>

            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1559981421-3e0c0d712e1a?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                </div>
                <h3 class="card-title">Sweet Home</h3>
                <p class="card-meta">Horror, Thriller</p>
            </div>

            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1519638399535-1b036603ac77?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                </div>
                <h3 class="card-title">Eleceed</h3>
                <p class="card-meta">Action, Comedy</p>
            </div>

            <div class="comic-card">
                <div class="card-image-wrapper">
                    <img src="https://images.unsplash.com/photo-1505968409348-bd000797c92e?q=80&w=1000&auto=format&fit=crop"
                         class="card-image" alt="Cover">
                </div>
                <h3 class="card-title">Lookism</h3>
                <p class="card-meta">Drama, School Life</p>
            </div>
        </div>
    </section>

</main>
