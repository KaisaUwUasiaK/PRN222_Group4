@model Group4_ReadingComicWeb.Models.Comic

@{
    ViewData["Title"] = "Home";
    var newComics = ViewBag.NewComics as List<Group4_ReadingComicWeb.Models.Comic>;
}

<main class="container">
    @if (Model != null)
    {
        <section class="hero">
            <img src="@Model.CoverImage" alt="Hero Background" class="hero-bg">
            <div class="hero-content">
                <div class="hero-tags">
                    <span class="tag">#1 Trending</span>
                    @foreach (var ct in Model.ComicTags)
                    {
                        <span class="tag">@ct.Tag.TagName</span>
                    }
                </div>
                <h1 class="hero-title">@Model.Title</h1>
                <p class="hero-desc">@Model.Description</p>
                <div class="flex gap-4">
                    <a href="@Url.Action("Read", "Comic", new { comicId = Model.ComicId })" class="btn btn-primary">Read Now</a>
                </div>
            </div>
        </section>
    }

    <section>
        <div class="section-header">
            <h2>New & Trending</h2>
            <a href="@Url.Action("Index", "Comic")" class="btn btn-ghost">View All -></a>
        </div>
        <div class="comic-grid">
            @if (newComics != null)
            {
                foreach (var item in newComics)
                {
                    <a href="@Url.Action("Detail", "Comic", new { id = item.ComicId })" class="comic-card" style="display: block; color: inherit; text-decoration: none;">
                        <div class="card-image-wrapper">
                            <img src="@item.CoverImage" class="card-image" alt="@item.Title">
                        </div>
                        <h3 class="card-title">@item.Title</h3>
                        <p class="card-meta">@item.Status</p>
                    </a>
                }
            }
        </div>
    </section>
</main>