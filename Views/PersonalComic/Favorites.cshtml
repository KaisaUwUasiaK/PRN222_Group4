@model List<Group4_ReadingComicWeb.Models.Comic>
@{
    ViewData["Title"] = "My Favorites";
}

@section Styles {
    <style>
        .fav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 1.5rem;
            min-height: 100vh;
        }

        /* Chia lưới (Grid) 5 cột tự động thu nhỏ trên điện thoại */
        .fav-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 1.5rem;
        }

        @@media (max-width: 1024px) {
            .fav-grid

        {
            grid-template-columns: repeat(4, 1fr);
        }

        }

        @@media (max-width: 768px) {
            .fav-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .fav-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
            }
        }

        /* Khung thẻ truyện */
        .fav-card {
            background-color: #182939;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

            .fav-card:hover {
                transform: translateY(-5px);
                border-color: rgba(239, 68, 68, 0.5); /* Đỏ khi hover */
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.5);
            }

        /* Xử lý ảnh đúng tỷ lệ 2/3 không bao giờ vỡ */
        .fav-img-wrapper {
            position: relative;
            width: 100%;
            padding-top: 150%; /* Tạo khung tỷ lệ 2:3 */
            background-color: #0d1520;
            overflow: hidden;
        }

        .fav-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .fav-card:hover .fav-img {
            transform: scale(1.1);
        }

        /* Nút xóa nổi lên khi hover */
        .fav-remove-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: rgba(0, 0, 0, 0.7);
            color: #d1d5db;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 20;
            opacity: 0;
            transition: all 0.2s ease;
            backdrop-filter: blur(4px);
        }

        .fav-card:hover .fav-remove-btn {
            opacity: 1;
        }

        .fav-remove-btn:hover {
            background-color: #ef4444;
            color: white;
        }

        /* Icon tim góc trái */
        .fav-heart-icon {
            position: absolute;
            top: 8px;
            left: 8px;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(4px);
            padding: 6px;
            border-radius: 50%;
            z-index: 10;
            color: #ef4444;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: none;
        }

        /* Khung thông tin chữ */
        .fav-info {
            padding: 12px 16px;
            display: flex;
            flex-direction: column;
            flex: 1;
            justify-content: space-between;
            gap: 8px;
        }

        .fav-title {
            color: white;
            font-size: 0.95rem;
            font-weight: 700;
            margin: 0;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            transition: color 0.2s ease;
            text-decoration: none;
        }

        .fav-card:hover .fav-title {
            color: #f87171;
        }

        .fav-views {
            color: #9ca3af;
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            gap: 4px;
            margin: 0;
        }

        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 5rem 1rem;
            background-color: #182939;
            border-radius: 16px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
    </style>
}

<div class="fav-container">
    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 2rem; border-left: 4px solid #ef4444; padding-left: 1rem;">
        <h2 style="font-size: 1.875rem; font-weight: 700; color: white; margin: 0;">My Favorite Comics</h2>
        <span style="color: #fca5a5; font-weight: 500; background-color: rgba(239, 68, 68, 0.1); padding: 4px 12px; border-radius: 9999px; font-size: 0.875rem;">@Model.Count items</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="fav-grid">
            @foreach (var comic in Model)
            {
                <div class="fav-card">
                    <form action="@Url.Action("RemoveFavorite", "PersonalComic")" method="post" style="margin: 0;">
                        <input type="hidden" name="comicId" value="@comic.ComicId" />
                        <button type="submit"
                                onclick="return confirm('Remove this comic from favorites?');"
                                class="fav-remove-btn"
                                title="Remove from favorites">
                            <i class="ph-bold ph-x" style="font-size: 14px;"></i>
                        </button>
                    </form>

                    <a href="@Url.Action("Detail", "Comic", new { id = comic.ComicId })" style="text-decoration: none; display: flex; flex-direction: column; height: 100%;">
                        <div class="fav-img-wrapper">
                            <img src="@comic.CoverImage" alt="@comic.Title" class="fav-img" onerror="this.src='https://placehold.co/240x340/1a1a1a/FFF?text=No+Image'">

                            <div class="fav-heart-icon">
                                <i class="ph-fill ph-heart" style="font-size: 14px;"></i>
                            </div>
                        </div>

                        <div class="fav-info">
                            <h3 class="fav-title" title="@comic.Title">@comic.Title</h3>
                            <p class="fav-views">
                                <i class="ph-fill ph-eye"></i> @comic.ViewCount Views
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="ph ph-heart-break" style="font-size: 4rem; color: #6b7280; margin-bottom: 1rem; opacity: 0.5;"></i>
            <h3 style="font-size: 1.5rem; font-weight: 700; color: white; margin-bottom: 0.5rem;">No favorites yet</h3>
            <p style="color: #9ca3af; margin-bottom: 1.5rem;">Explore comics and click the heart icon to save them here!</p>
            <a href="@Url.Action("Index", "Home")" style="background-color: #4f46e5; color: white; padding: 10px 24px; border-radius: 8px; text-decoration: none; font-weight: 500;">
                Explore Comics
            </a>
        </div>
    }
</div>