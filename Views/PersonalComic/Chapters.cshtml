@model Group4_ReadingComicWeb.Models.Comic

@{
    ViewData["Title"] = "Chapter management - " + Model.Title;
}

<div class="container" style="margin-top: 2rem; margin-bottom: 3rem;">
    <div style="margin-bottom: 1.5rem;">
        <a href="@Url.Action("Index")" class="text-muted hover:text-white">My Comic</a>
        <span class="text-muted" style="margin: 0 8px;">/</span>
        <span style="color: var(--text-primary); font-weight: 600;">@Model.Title</span>
    </div>

    <div style="display: grid; grid-template-columns: 2fr 1.2fr; gap: 2rem;">

        <div class="bg-surface rounded-md" style="padding: 1.5rem; border: 1px solid var(--border-color); height: fit-content;">
            <div class="flex justify-between items-center" style="margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid var(--border-color);">
                <h3>Chapter List</h3>
                <span class="text-muted">Tổng: @(Model.Chapters?.Count ?? 0)</span>
            </div>

            @if (Model.Chapters == null || !Model.Chapters.Any())
            {
                <div class="text-center" style="padding: 2rem 0;">
                    <i class="ph-duotone ph-files" style="font-size: 3rem; color: var(--text-muted); opacity: 0.5;"></i>
                    <p class="text-muted mt-2">None of chapter</p>
                </div>
            }
            else
            {
                <div style="display: flex; flex-direction: column; gap: 0.8rem;">
                    @foreach (var chap in Model.Chapters.OrderByDescending(c => c.ChapterNumber))
                    {
                        <div class="bg-surface rounded-md flex justify-between items-center" style="padding: 12px 16px; border: 1px solid var(--border-color); background: rgba(255,255,255,0.02); margin-bottom: 10px;">

                            <div class="flex items-center gap-4">
                                <span style="font-weight: 600; color: var(--color-primary); min-width: 80px;">Chapter @chap.ChapterNumber</span>
                                <span style="font-weight: 500;">@chap.Title</span>
                                <span class="text-muted" style="font-size: 0.8rem;">(@chap.CreatedAt.ToString("dd/MM"))</span>
                            </div>

                            <div class="flex items-center gap-2">
                                <a href="@Url.Action("Read", new { id = chap.ChapterId })" class="btn btn-ghost btn-sm" title="Xem nội dung">
                                    <i class="ph-fill ph-eye"></i>
                                </a>

                                <a href="@Url.Action("EditChapter", new { id = chap.ChapterId })" class="btn btn-ghost btn-sm" title="Sửa">
                                    <i class="ph-fill ph-pencil-simple"></i>
                                </a>

                                <form asp-action="DeleteChapter" asp-route-id="@chap.ChapterId" method="post"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa Chapter @chap.ChapterNumber không? Hành động này sẽ xóa toàn bộ ảnh của chapter.');"
                                      style="display: inline;">
                                    <button type="submit" class="btn btn-ghost btn-sm" style="color: #ef4444;" title="Xóa">
                                        <i class="ph-fill ph-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="bg-surface rounded-md" style="padding: 1.5rem; border: 1px solid var(--border-color); position: sticky; top: 100px;">
            <h3 style="margin-bottom: 1.5rem; color: var(--text-primary);">Upload New Chapter</h3>

            <form asp-action="CreateChapter" method="post" enctype="multipart/form-data">
                <input type="hidden" name="comicId" value="@Model.ComicId" />

                <div class="grid grid-cols-2 gap-2" style="margin-bottom: 1rem;">
                    <div>
                        <label class="text-muted" style="font-size: 0.9rem; margin-bottom: 4px; display: block;">Chapter Number</label>
                        <input type="number" name="chapterNumber" class="search-input" style="width: 100%; border-radius: 6px; padding: 8px 12px;" placeholder="Ex: 1" required />
                    </div>
                    <div>
                        <label class="text-muted" style="font-size: 0.9rem; margin-bottom: 4px; display: block;">Chapter Name</label>
                        <input type="text" name="title" class="search-input" style="width: 100%; border-radius: 6px; padding: 8px 12px;" placeholder="Title..."/>
                    </div>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label class="text-muted" style="font-size: 0.9rem; margin-bottom: 4px; display: block;">Content (Choose many images)</label>
                    <input type="file" name="pages" id="fileInput" class="search-input"
                           multiple accept="image/*"
                           style="width: 100%; border-radius: 6px; padding: 10px; margin-bottom: 12px;" required />

                    <div style="background: rgba(234, 179, 8, 0.1); border: 1px solid rgba(234, 179, 8, 0.3); border-radius: 6px; padding: 12px;">
                        <div class="flex items-center gap-2" style="margin-bottom: 6px;">
                            <i class="ph-fill ph-warning-circle" style="color: #eab308; font-size: 1.1rem;"></i>
                            <strong style="color: #eab308; font-size: 0.9rem;">Note:</strong>
                        </div>

                        <p class="text-muted" style="font-size: 0.8rem; margin-bottom: 8px; line-height: 1.4;color: white">
                            System sort by <strong>file name</strong>. Please name with order (001.jpg, 002.jpg...).
                        </p>

                        <div class="flex gap-4" style="font-size: 0.75rem; font-family: 'Noto Sans JP'; background: rgba(0,0,0,0.3); padding: 8px; border-radius: 4px;">
                            <div><span style="color: #22c55e;">✔</span> 001.jpg, 002.jpg</div>
                            <div style="opacity: 0.3; border-left: 1px solid #fff;"></div>
                            <div><span style="color: #ef4444;">✘</span> trang1.jpg, trang2.jpg</div>
                        </div>
                    </div>

                    <div id="fileListPreview" style="margin-top: 10px; font-size: 0.85rem; color: var(--text-muted); max-height: 150px; overflow-y: auto; padding-right: 5px;"></div>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    <i class="ph-bold ph-upload-simple" style="margin-right: 8px;"></i> Upload & Send to moderator
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('fileInput').addEventListener('change', function(e) {
        const fileList = document.getElementById('fileListPreview');
        fileList.innerHTML = ''; // Clear old content

        if (this.files.length > 0) {
            // Convert to Array to sort by name
            const filesArray = Array.from(this.files).sort((a, b) => a.name.localeCompare(b.name, undefined, {numeric: true, sensitivity: 'base'}));

            const countInfo = document.createElement('div');
            countInfo.innerHTML = `<span style="color: var(--color-primary)">Đã chọn ${this.files.length} ảnh.</span> Thứ tự upload:`;
            countInfo.style.marginBottom = '6px';
            fileList.appendChild(countInfo);

            const ul = document.createElement('ul');
            ul.style.listStyle = 'none';
            ul.style.paddingLeft = '0';

            filesArray.forEach((file, index) => {
                const li = document.createElement('li');
                li.innerHTML = `<span style="opacity: 0.5; margin-right: 8px;">${index + 1}.</span> 📄 ${file.name}`;
                li.style.marginBottom = '2px';
                li.style.borderBottom = '1px dashed rgba(255,255,255,0.1)';
                li.style.paddingBottom = '2px';
                ul.appendChild(li);
            });

            fileList.appendChild(ul);
        }
    });
</script>