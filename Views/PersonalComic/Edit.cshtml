@model Group4_ReadingComicWeb.Models.Comic

@{
    ViewData["Title"] = "Modify Comic";
    var tags = ViewBag.Tags as List<Group4_ReadingComicWeb.Models.Tag>;
    var selectedTagIds = ViewBag.SelectedTagIds as List<int> ?? new List<int>();
}

<div class="container" style="max-width: 800px; margin-top: 3rem; margin-bottom: 3rem;">
    <div style="margin-bottom: 1rem;">
        <a href="@Url.Action("Index")" class="text-muted hover:text-white"><i class="ph-bold ph-arrow-left"></i>Back</a>
    </div>

    <div class="bg-surface rounded-md" style="padding: 2.5rem; border: 1px solid var(--border-color);">
        <h2 style="margin-bottom: 0.5rem;">Update Comic Information</h2>
        <p class="text-muted" style="margin-bottom: 2rem;">Modify Comic "@Model.Title"</p>

        <form asp-action="Edit" asp-route-id="@Model.ComicId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ComicId" />

            <div asp-validation-summary="All" class="text-danger mb-4"></div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Comic Name <span style="color: #ef4444">*</span></label>
                <input asp-for="Title" class="search-input" style="width: 100%; border-radius: 8px; padding-left: 16px;" required />
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Cover Page</label>
                <div class="flex gap-4 items-start">
                    @if (!string.IsNullOrEmpty(Model.CoverImage))
                    {
                        <div style="width: 80px; height: 120px; border-radius: 6px; overflow: hidden; border: 1px solid var(--border-color);">
                            <img src="@Model.CoverImage" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                    }

                    <div style="flex-grow: 1; position: relative;">
                        <input type="file" name="coverImage" class="search-input" style="width: 100%; border-radius: 8px; padding: 10px;" accept="image/*" />
                        <p class="text-muted" style="font-size: 0.8rem; margin-top: 5px;">Leave blank if you want to keep the original image.</p>
                    </div>
                </div>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Description</label>
                <textarea asp-for="Description" class="search-input" rows="5" style="width: 100%; border-radius: 8px; height: auto; padding: 16px; font-family: inherit;"></textarea>
            </div>

            <div style="margin-bottom: 2.5rem;">
                <label style="display: block; margin-bottom: 1rem; font-weight: 500;">Tag</label>
                <div class="grid grid-cols-4 gap-2" style="max-height: 200px; overflow-y: auto;">
                    @if (tags != null)
                    {
                        foreach (var tag in tags)
                        {
                            bool isChecked = selectedTagIds.Contains(tag.TagId);

                            <label class="flex items-center gap-2 cursor-pointer" style="padding: 10px; border: 1px solid var(--border-color); border-radius: 6px; background: rgba(255,255,255,0.02);">
                                <input type="checkbox" name="selectedTags" value="@tag.TagId" style="accent-color: var(--color-primary);" @(isChecked ? "checked" : "") />
                                <span style="font-size: 0.9rem;">@tag.TagName</span>
                            </label>
                        }
                    }
                </div>
            </div>

            <div class="flex justify-between items-center" style="border-top: 1px solid var(--border-color); padding-top: 1.5rem;">
                <a href="@Url.Action("Index")" class="btn btn-ghost">Hủy</a>
                <button type="submit" class="btn btn-primary">
                    <i class="ph-fill ph-floppy-disk" style="margin-right: 8px;"></i>Save Change
                </button>
            </div>
        </form>
    </div>
</div>