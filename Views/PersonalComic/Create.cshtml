@model Group4_ReadingComicWeb.Models.Comic

@{
    ViewData["Title"] = "Upload Comic";
    var tags = ViewBag.Tags as List<Group4_ReadingComicWeb.Models.Tag>;
}

<div class="container" style="max-width: 800px; margin-top: 3rem; margin-bottom: 3rem;">
    <div style="margin-bottom: 1rem;">
        <a href="@Url.Action("Index")" class="text-muted hover:text-white"><i class="ph-bold ph-arrow-left"></i> Back to list</a>
    </div>

    <div class="bg-surface rounded-md" style="padding: 2.5rem; border: 1px solid var(--border-color);">
        <h2 style="margin-bottom: 0.5rem;">Comic Information</h2>
        <p class="text-muted" style="margin-bottom: 2rem;">Please enter comic information below and it will be moderated</p>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger" style="background: rgba(255,0,0,0.1); padding: 10px; border-radius: 5px; margin-bottom: 15px;"></div>

            <div style="margin-bottom: 1.5rem;">
            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Comic name <span style="color: #ef4444">*</span></label>
                <input asp-for="Title" name="Title" class="search-input" style="width: 100%; border-radius: 8px; padding-left: 16px;" placeholder="Nhập tên truyện..." required />
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Cover page</label>
                <div style="position: relative;">
                    <input type="file" name="coverImage" class="search-input" style="width: 100%; border-radius: 8px; padding: 10px;" accept="image/*" />
                    <i class="ph-fill ph-image" style="position: absolute; right: 15px; top: 12px; color: var(--text-muted);"></i>
                </div>
                    <span class="text-danger" style="color: #ef4444; font-size: 0.85rem; margin-top: 5px; display: block;">
                        @Html.ValidationMessage("coverImage")
                    </span>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Description</label>
                <textarea asp-for="Description" name="Description" class="search-input" rows="5" style="width: 100%; border-radius: 8px; height: auto; padding: 16px; font-family: inherit;" placeholder="Tóm tắt nội dung truyện..."></textarea>
            </div>

            <div style="margin-bottom: 2.5rem;">
                <label style="display: block; margin-bottom: 1rem; font-weight: 500;">Tag</label>
                <div class="grid grid-cols-4 gap-2" style="max-height: 200px; overflow-y: auto; padding-right: 5px;">
                    @if (tags != null)
                    {
                        foreach (var tag in tags)
                        {
                            <label class="flex items-center gap-2 cursor-pointer" style="padding: 10px; border: 1px solid var(--border-color); border-radius: 6px; background: rgba(255,255,255,0.02); transition: 0.2s;">
                                <input type="checkbox" name="selectedTags" value="@tag.TagId" style="accent-color: var(--color-primary);" />
                                <span style="font-size: 0.9rem;">@tag.TagName</span>
                            </label>
                        }
                    }
                </div>
            </div>

            <div class="flex justify-between items-center" style="border-top: 1px solid var(--border-color); padding-top: 1.5rem;">
                <a href="@Url.Action("Index")" class="btn btn-ghost">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="ph-fill ph-paper-plane-right" style="margin-right: 8px;"></i> Send
                </button>
            </div>
        </form>
    </div>
</div>