@{
    ViewData["Title"] = "Pending Comics";
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}

@model List<ComicModeration>

<div class="admin-main">
    <div class="flex justify-between items-center" style="margin-bottom: 2rem;">
        <h1 style="margin-bottom: 0;">Pending Comics for Review</h1>
        <a href="@Url.Action("Dashboard", "Moderation")" class="btn btn-outline">Back to Dashboard</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Comic Title</th>
                        <th>Author</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var moderation in Model)
                    {
                        <tr>
                            <td style="font-weight: 500; max-width: 200px;">@moderation.Comic.Title</td>
                            <td>Author_@moderation.Comic.AuthorId</td>
                            <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                @Html.Raw(moderation.Comic.Description?.Substring(0, Math.Min(100, moderation.Comic.Description?.Length ?? 0)) + "...")
                            </td>
                            <td>@moderation.Comic.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td><span class="badge badge-warning">Pending</span></td>
                            <td>
                                <a href="@Url.Action("Review", "Moderation", new { id = moderation.ComicModerationId })" 
                                   class="btn btn-ghost" style="padding: 4px; font-size: 0.85rem;">Review</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="table-container" style="padding: 3rem; text-align: center;">
            <i class="ph ph-check-circle" style="font-size: 3rem; color: var(--color-accent); margin-bottom: 1rem;"></i>
            <p style="font-size: 1.2rem; margin-bottom: 0.5rem;">No pending comics!</p>
            <p style="color: var(--text-muted);">All comics have been reviewed.</p>
        </div>
    }
</div>

@section Styles {
    <style>
        .admin-main {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
        }

        .table-container {
            background: var(--bg-surface);
            border-radius: var(--radius-md);
            border: 1px solid var(--border-color);
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            padding: 1rem 1.5rem;
            color: var(--text-muted);
            font-weight: 500;
            font-size: 0.9rem;
            border-bottom: 1px solid var(--border-color);
        }

        td {
            padding: 1rem 1.5rem;
            color: var(--text-secondary);
            border-bottom: 1px solid var(--border-color);
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover td {
            background: var(--bg-surface-hover);
        }

        .badge {
            padding: 4px 8px;
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-warning {
            background: rgba(245, 158, 11, 0.2);
            color: #FBBF24;
        }
    </style>
}