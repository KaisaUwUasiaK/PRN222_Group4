@{
    ViewData["Title"] = "Review Comic";
    ViewData["Breadcrumb"] = "Review Comic";
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}

@model ComicModeration

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left">
        <h1>Review Comic</h1>
        <p>Review comic details and take moderation action</p>
    </div>
    <a href="@Url.Action("Pending", "Moderation")" class="btn btn-outline" style="padding: 6px 14px; font-size: 0.85rem;">Back to Pending</a>
</div>

@if (Model != null)
{
    <!-- Comic Info Card -->
    <div class="data-card" style="margin-bottom: 1.5rem;">
        <div class="data-card-header">
            <h3 class="data-card-title">
                <i class="ph ph-book-open" style="margin-right: 6px; color: var(--color-primary);"></i>
                Comic Information
            </h3>
            @{
                var statusClass = Model.ModerationStatus switch
                {
                    "Approved" => "badge-success",
                    "Rejected" => "badge-danger",
                    "Hidden" => "badge-info",
                    _ => "badge-warning"
                };
            }
            <span class="badge @statusClass">
                <span class="badge-dot" style="background: currentColor;"></span>
                @Model.ModerationStatus
            </span>
        </div>

        <div style="display: flex; gap: 2rem; padding: 1.5rem;">
            <!-- Cover Image -->
            <div style="flex-shrink: 0; width: 200px;">
                <img src="@Model.Comic.CoverImage" alt="@Model.Comic.Title"
                     style="width: 100%; border-radius: var(--radius-sm); border: 1px solid var(--border-color); display: block;">
            </div>

            <!-- Comic Details -->
            <div style="flex: 1; min-width: 0;">
                <h2 style="margin: 0 0 1rem 0; font-size: 1.4rem; color: var(--text-primary);">@Model.Comic.Title</h2>

                <div style="display: grid; grid-template-columns: 140px 1fr; row-gap: 0.75rem; column-gap: 1rem; margin-bottom: 1.25rem;">
                    <span style="color: var(--text-muted); font-size: 0.85rem; display: flex; align-items: center; gap: 6px;">
                        <i class="ph ph-user"></i> Author
                    </span>
                    <span style="font-weight: 500; color: var(--text-primary); font-size: 0.9rem;">
                        @(Model.Comic.Author?.Username ?? "Unknown Author")
                    </span>

                    <span style="color: var(--text-muted); font-size: 0.85rem; display: flex; align-items: center; gap: 6px;">
                        <i class="ph ph-calendar"></i> Created Date
                    </span>
                    <span style="font-weight: 500; color: var(--text-primary); font-size: 0.9rem;">
                        @Model.Comic.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                    </span>

                    <span style="color: var(--text-muted); font-size: 0.85rem; display: flex; align-items: center; gap: 6px;">
                        <i class="ph ph-eye"></i> Views
                    </span>
                    <span style="font-weight: 500; color: var(--text-primary); font-size: 0.9rem;">
                        @Model.Comic.ViewCount.ToString("N0")
                    </span>

                    <span style="color: var(--text-muted); font-size: 0.85rem; display: flex; align-items: center; gap: 6px;">
                        <i class="ph ph-books"></i> Chapters
                    </span>
                    <span style="font-weight: 500; color: var(--text-primary); font-size: 0.9rem;">
                        @(Model.Comic.Chapters?.Count ?? 0)
                    </span>
                </div>

                <!-- Description -->
                <div>
                    <p style="color: var(--text-muted); font-size: 0.85rem; margin-bottom: 0.4rem; display: flex; align-items: center; gap: 6px;">
                        <i class="ph ph-text-align-left"></i> Description
                    </p>
                    <p style="color: var(--text-secondary); line-height: 1.6; font-size: 0.9rem; margin: 0;">
                        @Model.Comic.Description
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Chapter List -->
    <div class="data-card" style="margin-bottom: 1.5rem;">
        <div class="data-card-header">
            <h3 class="data-card-title">
                <i class="ph ph-list-numbers" style="margin-right: 6px; color: var(--color-primary);"></i>
                Chapters
            </h3>
            <span class="badge" style="background: rgba(124,58,237,0.15); color: var(--color-primary);">
                @(Model.Comic.Chapters?.Count ?? 0)
            </span>
        </div>

        @if (Model.Comic.Chapters?.Any() == true)
        {
            <div style="overflow-x: auto;">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th style="width: 80px;">#</th>
                            <th>Title</th>
                            <th>Uploaded</th>
                            <th style="text-align: right;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chapter in Model.Comic.Chapters.OrderBy(c => c.ChapterNumber))
                        {
                            <tr>
                                <td style="font-weight: 600; color: var(--color-primary);">@chapter.ChapterNumber</td>
                                <td style="color: var(--text-primary);">@(chapter.Title ?? $"Chapter {chapter.ChapterNumber}")</td>
                                <td>@chapter.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td style="text-align: right;">
                                    <a href="@Url.Action("ReadChapter", "Moderation", new { chapterId = chapter.ChapterId, moderationId = Model.ComicModerationId })"
                                       class="action-btn" style="color: var(--color-primary); border-color: rgba(124,58,237,0.3);">
                                        <i class="ph ph-eye"></i> Read
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="padding: 2rem 1rem; text-align: center;">
                <i class="ph ph-files" style="font-size: 2.5rem; color: var(--text-muted); opacity: 0.4; display: block; margin-bottom: 0.75rem;"></i>
                <p style="color: var(--text-muted); margin: 0;">No chapters uploaded yet.</p>
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="data-card">
        <div class="data-card-header">
            <h3 class="data-card-title">
                <i class="ph ph-gavel" style="margin-right: 6px; color: var(--color-primary);"></i>
                Moderation Actions
            </h3>
        </div>
        <div style="padding: 1.25rem 1.5rem; display: flex; gap: 0.75rem; flex-wrap: wrap;">
            <form action="@Url.Action("Approve", "Moderation", new { id = Model.ComicModerationId })" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="action-btn" style="color: var(--color-accent); border-color: rgba(16,185,129,0.3); padding: 8px 20px;">
                    <i class="ph ph-check-circle"></i> Approve
                </button>
            </form>
            <button type="button" class="action-btn" style="color: #FBBF24; border-color: rgba(245,158,11,0.3); padding: 8px 20px;" onclick="showRejectModal();">
                <i class="ph ph-x-circle"></i> Reject
            </button>
            <button type="button" class="action-btn action-btn-ban" style="padding: 8px 20px;" onclick="showHideModal();">
                <i class="ph ph-eye-slash"></i> Hide
            </button>
        </div>
    </div>

    <!-- Reject Modal -->
    <div id="rejectModal" class="modal" style="display: none;">
        <div class="modal-content">
            <h2>Reject Comic</h2>
            <p style="color: var(--text-secondary); margin-bottom: 1rem;">
                Please provide a reason for rejecting this comic.
            </p>
            <form action="@Url.Action("Reject", "Moderation", new { id = Model.ComicModerationId })" method="post">
                @Html.AntiForgeryToken()
                <div style="margin-bottom: 1rem;">
                    <textarea name="reason" class="form-control" placeholder="Enter rejection reason..."
                              rows="4" required style="resize: vertical;"></textarea>
                </div>
                <div style="display: flex; gap: 0.75rem;">
                    <button type="submit" class="action-btn" style="color: #FBBF24; border-color: rgba(245,158,11,0.3); padding: 8px 20px;">
                        Submit Rejection
                    </button>
                    <button type="button" class="action-btn" style="color: var(--text-muted); border-color: var(--border-color); padding: 8px 20px;" onclick="closeRejectModal();">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Hide Modal -->
    <div id="hideModal" class="modal" style="display: none;">
        <div class="modal-content">
            <h2>Hide Comic</h2>
            <p style="color: var(--text-secondary); margin-bottom: 1rem;">
                Please provide a reason for hiding this comic (violation reason).
            </p>
            <form action="@Url.Action("Hide", "Moderation", new { id = Model.ComicModerationId })" method="post">
                @Html.AntiForgeryToken()
                <div style="margin-bottom: 1rem;">
                    <textarea name="reason" class="form-control" placeholder="Enter hiding reason..."
                              rows="4" required style="resize: vertical;"></textarea>
                </div>
                <div style="display: flex; gap: 0.75rem;">
                    <button type="submit" class="action-btn action-btn-ban" style="padding: 8px 20px;">
                        Confirm Hide
                    </button>
                    <button type="button" class="action-btn" style="color: var(--text-muted); border-color: var(--border-color); padding: 8px 20px;" onclick="closeHideModal();">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Overlay -->
    <div id="modalOverlay" class="modal-overlay" style="display: none;" onclick="closeModals();"></div>
}
else
{
    <div class="data-card" style="padding: 3rem 1rem; text-align: center;">
        <i class="ph ph-warning" style="font-size: 3rem; color: var(--text-muted); margin-bottom: 1rem; display: block;"></i>
        <p style="font-size: 1.2rem; font-weight: 600; color: var(--text-primary);">Comic not found.</p>
    </div>
}

@section Styles {
    <style>
        .modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: var(--bg-surface);
            border-radius: var(--radius-md);
            border: 1px solid var(--border-color);
            padding: 2rem;
            z-index: 1001;
            max-width: 500px;
            width: 90%;
            box-shadow: var(--shadow-card);
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.65);
            backdrop-filter: blur(4px);
            z-index: 1000;
        }
    </style>
}

@section Scripts {
    <script>
        function showRejectModal() {
            document.getElementById('rejectModal').style.display = 'block';
            document.getElementById('modalOverlay').style.display = 'block';
        }

        function closeRejectModal() {
            document.getElementById('rejectModal').style.display = 'none';
            document.getElementById('modalOverlay').style.display = 'none';
        }

        function showHideModal() {
            document.getElementById('hideModal').style.display = 'block';
            document.getElementById('modalOverlay').style.display = 'block';
        }

        function closeHideModal() {
            document.getElementById('hideModal').style.display = 'none';
            document.getElementById('modalOverlay').style.display = 'none';
        }

        function closeModals() {
            closeRejectModal();
            closeHideModal();
        }
    </script>
}