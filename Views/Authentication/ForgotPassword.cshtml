@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ComicVerse</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&display=swap" rel="stylesheet">

    <script src="https://unpkg.com/%40phosphor-icons/web"></script>

    <link rel="stylesheet" href="~/css/variables.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css"/>
    <style>
        .validation-summary-errors { display: none; }
    </style>
</head>
<body>

<div class="auth-container">
    <div class="auth-bg-circle top-left"></div>
    <div class="auth-bg-circle bottom-right"></div>

    <div class="auth-card">
        <div class="auth-header">
            <a href="@Url.Action("Index", "Home")" class="auth-logo">
                <i class="ph-fill ph-book-open-text"></i>
                <span>ComicVerse</span>
            </a>
            <h1 class="auth-title">Forgot Password</h1>
            <p class="auth-subtitle">Enter your registered email to receive a password reset link</p>
        </div>

        <form action="@Url.Action("ForgotPassword", "Authentication")" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })

            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-wrapper">
                    <input type="email" id="email" name="email" class="form-input" placeholder="name@example.com" required>
                    <i class="ph ph-envelope-simple input-icon"></i>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Send Instructions</button>
        </form>

        <div class="auth-footer">
            Back to login?
            <a href="@Url.Action("Login", "Authentication")" class="auth-link">Sign in</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const notyf = new Notyf({ duration: 4000, position: { x: 'right', y: 'top' }, dismissible: true });

        @if (TempData["Success"] != null)
        {
            <text>notyf.success("@TempData["Success"]");</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>notyf.error("@TempData["Error"]");</text>
        }
        @if (TempData["Warning"] != null)
        {
            <text>notyf.open({ type: 'warning', message: "@TempData["Warning"]" });</text>
        }
        @if (TempData["Info"] != null)
        {
            <text>notyf.open({ type: 'info', message: "@TempData["Info"]" });</text>
        }

        document.querySelectorAll('.validation-summary-errors li').forEach(function (item) {
            var msg = item.textContent.trim();
            if (msg) notyf.error(msg);
        });
    });
</script>

</body>
</html>
