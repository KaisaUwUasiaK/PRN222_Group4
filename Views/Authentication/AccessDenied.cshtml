@{
    ViewData["Title"] = "Access Denied";
}

<div class="container" style="padding: 100px 0; text-align: center;">
    <div style="max-width: 500px; margin: 0 auto; background: var(--color-surface); padding: 40px; border-radius: var(--radius-lg); box-shadow: var(--shadow-md);">
        <i class="ph-fill ph-warning-octagon" style="font-size: 4rem; color: var(--color-danger); margin-bottom: 20px;"></i>
        <h1 style="font-family: var(--font-heading); margin-bottom: 16px;">Access Denied</h1>
        <p class="text-muted" style="margin-bottom: 32px;">You do not have permission to access this page. Please contact your administrator if you believe this is an error.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="ph ph-house" style="margin-right: 8px;"></i> Back to Home
        </a>
    </div>
</div>
