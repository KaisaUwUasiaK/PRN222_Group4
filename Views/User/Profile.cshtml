@model Group4_ReadingComicWeb.ViewModels.ProfileUpdateViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

@section Styles {
    <style>
        .profile-container {
            max-width: 800px;
            margin: 4rem auto;
        }

        .profile-card {
            background: var(--bg-surface);
            border-radius: var(--radius-lg);
            border: 1px solid var(--border-color);
            overflow: hidden;
            box-shadow: var(--shadow-card);
        }

        .profile-header {
            background: linear-gradient(135deg, var(--color-brand-start) 0%, var(--color-brand-end) 100%);
            height: 160px;
            position: relative;
        }

        .profile-avatar-wrapper {
            position: absolute;
            bottom: -60px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-avatar-frame {
            position: relative;
            width: 120px;
            height: 120px;
        }

        .profile-avatar-lg {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid var(--bg-surface);
            object-fit: cover;
            background: var(--bg-main);
        }

        .avatar-upload-btn {
            position: absolute;
            right: 6px;
            bottom: 6px;
            width: 38px;
            height: 38px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #7c3aed, #a855f7);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            transition: all 0.2s ease;
            outline: 3px solid var(--bg-surface);
        }

        .avatar-upload-btn:hover {
            transform: scale(1.1);
        }

        .avatar-upload-input {
            display: none;
        }

        .profile-body {
            padding: 4rem 2rem 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .form-input,
        .form-textarea {
            width: 100%;
            padding: 12px 16px;
            background: var(--bg-main);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-sm);
            color: var(--text-primary);
            font-family: var(--font-body);
            transition: border-color 0.2s;
        }

        .form-input:focus,
        .form-textarea:focus {
            outline: none;
            border-color: var(--color-primary);
            box-shadow: 0 0 0 2px rgba(124, 58, 237, 0.1);
        }

        .form-textarea {
            resize: vertical;
            min-height: 100px;
        }

        .btn-delete {
            color: var(--color-danger);
            background: rgba(244, 63, 94, 0.1);
            border: none; 
            padding: 10px 20px;
            border-radius: var(--radius-sm);
            font-weight: 500;
            cursor: pointer;
        }

        .btn-delete:hover {
            background: rgba(244, 63, 94, 0.2);
        }

        .text-danger {
            color: var(--color-danger);
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .text-success {
            color: #10b981;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .delete-confirm-input {
            margin-top: 1rem;
            padding: 8px 12px;
            border: 1px solid var(--border-color);
            border-radius: var(--radius-sm);
            background: var(--bg-main);
            color: var(--text-primary);
        }
    </style>
}

<main class="container profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar-wrapper">
                <div class="profile-avatar-frame">
                    <img id="avatarImage" src="@(string.IsNullOrWhiteSpace(Model.User.AvatarUrl) ? "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(Model.User.Username) + "&background=6366f1&color=fff&size=120" : Model.User.AvatarUrl)" alt="Profile" class="profile-avatar-lg">
                    <label for="avatarFile" class="avatar-upload-btn" title="Change avatar">
                        <i class="ph ph-camera"></i>
                    </label>
                    <input type="file" id="avatarFile" class="avatar-upload-input" accept="image/jpeg,image/jpg,image/png,image/gif">
                </div>
            </div>
        </div>

        <div class="profile-body">
            <div style="text-align: center; margin-bottom: 3rem; margin-top: 1rem;">
                <h2 style="font-size: 1.5rem;">Edit Profile</h2>
                <p class="text-muted">Update your personal information</p>
            </div>

            <form asp-action="Profile" method="post" id="profileForm" novalidate>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })
                
                <div class="grid grid-cols-2 gap-6">
                    <div class="form-group">
                        <label class="form-label" asp-for="Username">Display Name</label>
                        <input asp-for="Username" class="form-input" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-input" value="@Model.User.Email" disabled
                               style="opacity: 0.7; cursor: not-allowed;">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Bio">Bio</label>
                    <textarea asp-for="Bio" class="form-textarea"></textarea>
                </div>

                <div style="margin: 2rem 0 1.5rem; padding: 16px 20px; background: rgba(124, 58, 237, 0.06); border: 1px solid rgba(124, 58, 237, 0.2); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: space-between;">
                    <div class="flex items-center gap-3">
                        <i class="ph ph-shield-check" style="font-size: 2.5rem; color: var(--color-primary);"></i>
                        <div>
                            <div style="font-weight: 600; font-size: 0.95rem;">Password &amp; Security</div>
                            <div class="text-muted" style="font-size: 0.85rem;">Update your password to keep your account secure</div>
                        </div>
                    </div>
                    <a href="@Url.Action("ChangePassword", "User")" class="btn btn-outline" style="white-space: nowrap; flex-shrink: 0;">
                        <i class="ph ph-lock-key" style="margin-right: 6px;"></i>
                        Change Password
                    </a>
                </div>

                <div class="flex justify-between items-center"
                     style="margin-top: 3rem; padding-top: 1.5rem; border-top: 1px solid var(--border-color);">
                    <div>
                        <button type="button" class="btn btn-delete" id="deleteAccountBtn">Delete Account</button>
                        <div id="deleteConfirmSection" style="display: none; margin-top: 1rem;">
                            <p style="color: var(--color-danger); margin-bottom: 0.5rem;">Type 'DELETE' to confirm:</p>
                            <input type="text" id="deleteConfirmInput" class="delete-confirm-input" placeholder="Type DELETE">
                            <button type="button" class="btn btn-delete" id="confirmDeleteBtn" style="margin-left: 0.5rem;">Confirm Delete</button>
                            <button type="button" class="btn btn-ghost" id="cancelDeleteBtn" style="margin-left: 0.5rem;">Cancel</button>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </form>

            <!-- Hidden delete form (separate, not nested) -->
            <form asp-action="DeleteAccount" method="post" id="deleteForm" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="confirmText" id="deleteConfirmText" />
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Initialize Notyf for toast notifications
        const notyf = new Notyf({
            duration: 4000,
            position: { x: 'right', y: 'top' },
            dismissible: true
        });

        // Avatar upload
        document.getElementById('avatarFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;

            // Validate file type
            const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
            if (!allowedTypes.includes(file.type)) {
                notyf.error('Invalid file type. Only JPG, PNG, and GIF are allowed.');
                return;
            }

            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                notyf.error('File size exceeds 5MB limit.');
                return;
            }

            // Preview image
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('avatarImage').src = e.target.result;
            };
            reader.readAsDataURL(file);

            // Upload file
            const formData = new FormData();
            formData.append('avatarFile', file);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }

            fetch('@Url.Action("UploadAvatar", "User")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('avatarImage').src = data.avatarUrl;
                    notyf.success('Avatar updated successfully!');
                } else {
                    notyf.error(data.message || 'Failed to upload avatar.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                notyf.error('An error occurred while uploading the avatar.');
            });
        });

        // Delete account confirmation
        const deleteAccountBtn = document.getElementById('deleteAccountBtn');
        const deleteConfirmSection = document.getElementById('deleteConfirmSection');
        const deleteConfirmInput = document.getElementById('deleteConfirmInput');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        const deleteForm = document.getElementById('deleteForm');
        const deleteConfirmText = document.getElementById('deleteConfirmText');

        deleteAccountBtn.addEventListener('click', function() {
            deleteConfirmSection.style.display = 'block';
        });

        cancelDeleteBtn.addEventListener('click', function() {
            deleteConfirmSection.style.display = 'none';
            deleteConfirmInput.value = '';
        });

        confirmDeleteBtn.addEventListener('click', function() {
            const confirmText = deleteConfirmInput.value;
            if (confirmText !== 'DELETE') {
                notyf.error('Please type "DELETE" to confirm account deletion.');
                return;
            }
            deleteConfirmText.value = confirmText;
            deleteForm.submit();
        });
    </script>
}
