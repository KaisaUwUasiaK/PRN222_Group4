@model Group4_ReadingComicWeb.ViewModels.ManageModViewModel
@{
    ViewData["Title"] = "Manage Moderators";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/variables.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <a href="@Url.Action("Dashboard", "Admin")" class="sidebar-logo flex items-center gap-2">
            <span style="font-family: var(--font-heading); font-size: 1.25rem; font-weight: 700;">📚 CvAdmin</span>
        </a>

        <div class="nav-group">
            <div class="nav-label">Overview</div>
            <a href="@Url.Action("Dashboard", "Admin")" class="nav-item">
                Dashboard
            </a>
        </div>

        <div class="nav-group">
            <div class="nav-label">Management</div>
            <a href="@Url.Action("ManageMod", "Admin")" class="nav-item active">
                Moderators
            </a>
        </div>

        <div class="nav-group" style="margin-top: auto;">
            <a href="@Url.Action("Logout", "Account")" class="nav-item" style="color: var(--color-danger);">
                Logout
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <div class="flex justify-between items-center" style="margin-bottom: 2rem;">
            <h1 style="margin-bottom: 0;">Manage Moderators</h1>
            <div class="flex items-center gap-4">
                <button class="btn btn-primary" style="padding: 8px 16px; font-size: 0.9rem;">
                    + Add Moderator
                </button>
                <span style="font-weight: 600;">@(User.Identity?.Name ?? "Admin")</span>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div style="margin-bottom: 1.5rem; padding: 12px 16px; background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.3); border-radius: 8px; color: #34D399;">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div style="margin-bottom: 1.5rem; padding: 12px 16px; background: rgba(244, 63, 94, 0.1); border: 1px solid rgba(244, 63, 94, 0.3); border-radius: 8px; color: #FB7185;">
                @TempData["Error"]
            </div>
        }

        <!-- Stats -->
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; margin-bottom: 2rem;">
            <div class="stat-card">
                <div class="stat-label">Total Moderators</div>
                <div class="stat-value">@Model.TotalModerators</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Active Moderators</div>
                <div class="stat-value" style="color: var(--color-accent);">@Model.ActiveModerators</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Banned Moderators</div>
                <div class="stat-value" style="color: var(--color-danger);">@Model.BannedModerators</div>
            </div>
        </div>

        <!-- Moderators Table -->
        <div class="table-container">
            <div class="table-header">
                <h3>All Moderators</h3>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Password Hash</th>
                        <th>Created Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Moderators.Any())
                    {
                        @foreach (var mod in Model.Moderators)
                        {
                            <tr>
                                <td>@mod.UserId</td>
                                <td style="font-weight: 500;">@mod.Username</td>
                                <td>@mod.Email</td>
                                <td style="font-family: monospace; font-size: 0.85rem;">
                                    @mod.PasswordHash.Substring(0, Math.Min(20, mod.PasswordHash.Length))...
                                </td>
                                <td>@mod.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @{
                                        var statusBadge = mod.Status switch
                                        {
                                            AccountStatus.Online => ("badge-success", "Online"),
                                            AccountStatus.Offline => ("badge-warning", "Offline"),
                                            AccountStatus.Banned => ("badge-danger", "Banned"),
                                            _ => ("badge-warning", "Unknown")
                                        };
                                    }
                                    <span class="badge @statusBadge.Item1">@statusBadge.Item2</span>
                                </td>
                                <td>
                                    @if (mod.Status == AccountStatus.Banned)
                                    {
                                        <form asp-action="UnbanModerator" method="post" style="display: inline;"
                                              onsubmit="return confirm('Unban @mod.Username?');">
                                            <input type="hidden" name="userId" value="@mod.UserId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-ghost" style="padding: 4px 8px; color: var(--color-accent);">
                                                ✓ Unban
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="BanModerator" method="post" style="display: inline;"
                                              onsubmit="return confirm('Ban @mod.Username?');">
                                            <input type="hidden" name="userId" value="@mod.UserId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-ghost" style="padding: 4px 8px; color: var(--color-danger);">
                                                ⊗ Ban
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="text-align: center; padding: 2rem;">No moderators found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
